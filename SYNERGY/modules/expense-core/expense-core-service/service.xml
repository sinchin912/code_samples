<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.trantorinc.synergy.expense.core">
	<namespace>EXPENSE</namespace>
	<entity local-service="true" name="Expense" remote-service="false" uuid="false">
		<column name="expenseId" primary="true" type="long" id-type="increment" />
		<column name="ecode" type="String" />
		<column name="expenseType" type="String"/>
		<column name="totalBillAmount" type="long"/>
		<column name="assignee" type="String"/>
		<column name="managerComment" type="String"/>
		<column name="financeComment" type="String"/>
		<column name="approvingManager" type="String"/>
		<!--0 for open , 1 for Finance Approved, 2 for Finance Disapp, 3 for Manager Approved, 4 for Manager Disapp -->
		<column name="status" type="int"/>
		<column name="createdDate" type="Date"/>
		<column name="managerDate" type="Date" />
		<column name="financeDate" type="Date" />
		<column name="fileId" type="String" />
		<order by="asc">
			<order-column name="expenseId" />
		</order>
	</entity>

	<entity local-service="true"  name="ExpenseLine" remote-service="false" uuid="false">
		<column name="lineId" primary="true" type="long"  />
		<column name="expenseId"  type="long" />
		<column name="startDate" type="Date" />
		<column name="endDate" type="Date" />
		<column name="description" type="String" />
		<column name="billAmount" type="long" />
		<order by="asc">
			<order-column name="expenseId" />
		</order>
	</entity>
</service-builder>