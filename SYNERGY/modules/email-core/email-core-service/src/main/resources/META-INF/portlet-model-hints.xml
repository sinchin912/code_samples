		<field name="emailId" type="long" />
		<field name="scheduled" type="boolean" />
		<field name="module" type="String" />
		<field name="toAddress" type="String">
			<hint name="max-length">5000</hint>
		</field>
		<field name="ccAddress" type="String">
			<hint name="max-length">5000</hint>
		</field>
		<field name="bccAddress" type="String">
			<hint name="max-length">50000</hint>
		</field>
		<field name="subject" type="String">
			<hint name="max-length">5000</hint>
		</field>
		<field name="body" type="String">
			<hint name="max-length">50000</hint>
		</field>
		<field name="createdDate" type="Date" />
		<field name="sent" type="boolean" />
	</model>
	<model name="com.trantorinc.synergy.email.core.model.EmailAttachment">
		<field name="emailAttachmentId" type="long" />
		<field name="emailId" type="long" />
		<field name="attachmentName" type="String">
			<hint name="max-length">500</hint>
