<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false" default-lazy="false">
	<import class="com.trantorinc.synergy.email.core.model.Email" />
	<import class="com.trantorinc.synergy.email.core.model.EmailAttachment" />
	<class name="com.trantorinc.synergy.email.core.model.impl.EmailImpl" table="EMAIL_Email">
		<id access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="emailId" type="long">
			<generator class="increment" />
		</id>
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="scheduled" type="com.liferay.portal.dao.orm.hibernate.BooleanType" />
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="module" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="toAddress" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="ccAddress" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="bccAddress" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="subject" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="body" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="createdDate" type="org.hibernate.type.TimestampType" />
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="sent" type="com.liferay.portal.dao.orm.hibernate.BooleanType" />
	</class>
	<class name="com.trantorinc.synergy.email.core.model.impl.EmailAttachmentImpl" table="EMAIL_EmailAttachment">
		<id access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="emailAttachmentId" type="long">
			<generator class="increment" />
		</id>
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="emailId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="attachmentName" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property access="com.liferay.portal.dao.orm.hibernate.LiferayPropertyAccessor" name="attachmentFileId" type="com.liferay.portal.dao.orm.hibernate.StringType" />
	</class>
</hibernate-mapping>