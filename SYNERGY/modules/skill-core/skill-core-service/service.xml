<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.trantorinc.synergy.skill.core">
	<namespace>SKILL</namespace>

	<entity local-service="true" name="SkillGuide" remote-service="false" uuid="false">
		<!-- PK fields -->
		<column name="guideId" primary="true" type="long"/>
		<column name="coreSkill" type="String"/>
		<column name="subSkill" type="String"/>
		<!-- Order -->
		<order by="asc">
			<order-column name="guideId"/>
		</order>
	</entity>

	<entity local-service="true" name="Skill" remote-service="false" uuid="false">
		<!-- PK fields -->
		<column name="skillId" primary="true" type="long"/>
		<column name="ecode" type="String"/>
		<column name="project" type="String"/>
		<column name="coreSkill" type="String"/>
		<column name="subSkill" type="String"/>
		<column name="tool" type="String"/>
		<column name="validity" type="String"/>
		<column name="version" type="String"/>
		<!--0 for Submitted , 1 for Approved 2 for Rejected -->
		<column name="status" type="int"/>
		<column name="reviewer" type="String"/>
		<column name="manager" type="String"/>
		<!--0 for secondary , 1 for Primary -->
		<column name="primarySkill" type="boolean"/>
		<column name="proficiencyLevel" type="int"/>
		<column name="requiredLevel" type="int"/>
		<!-- Order -->
		<order by="asc">
			<order-column name="skillId"/>
		</order>
	</entity>

	<entity local-service="true" remote-service="false" name="Certificate" uuid="false">
		<column name="certificateId" primary="true" type="long"/>
		<column name="ecode" type="String"/>
		<column name="name" type="String"/>
		<column name="category" type="String"/>
		<column name="description" type="String"/>
		<column name="fileId" type="String"/>
		<column name="filename" type="String"/>
		<column name="createdDate" type="Date"/>
		<column name="expiryDate" type="Date"/>
	</entity>

	<entity local-service="true" remote-service="false" name="SkillRejectionComment" uuid="false">
		<column name="commentId" primary="true" type="long"/>
		<column name="ecode" type="String"/>
		<column name="author" type="String"/>
		<column name="description" type="String"/>
		<column name="createdDate" type="Date"/>
	</entity>
</service-builder>